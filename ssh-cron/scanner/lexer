%filenames scanner

//%interactive
//%debug

ID      [[:alpha:]_][[:alnum:]_-]*

%%

// %nowarn
^[ \t]*(#.*)?                   // ignore ws (+ comment) at BOL

[ \t]+                          return Parser::WS;

[0-9]+                          return Parser::NR;

{ID}                            return Parser::ID;

[*/,:=\n-]                      return matched()[0];

.                               return Parser::CHAR;





