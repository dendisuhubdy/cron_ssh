minutes:
    numberSpec
    {
        d_cron.setMinutes();
    }
;

hours:
    numberSpec
    {
        d_cron.setHours();
    }
;

dayOfMonth:
    numberSpec
    {
        d_cron.setDayOfMonth();
    }
;

monthOfYear:
    timeSpec
    {
        d_cron.setMonthOfYear();
    }
;

dayOfWeek:
    timeSpec
    {
        d_cron.setDayOfWeek();
        d_scanner.getTail();
    }
;

command:
    noWSsequence
    {
        d_cron.setCommand($1);
    }
;

cronLine:
    minutes hours dayOfMonth monthOfYear dayOfWeek command
    {
        d_cron.process();
    }
;
