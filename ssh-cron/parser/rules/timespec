timeEnds:
    WS
    {
        emsg.on();
    }
;

nr:
    NR
    {
        stol(d_scanner.matched());
    }
;


optStep:
    // empty
    {
        return 1;
    }
|
    '/' nr
;

//timeName:
//    ID
//    {
//        d_cron.addName();
//    }
//;

numberUnit:
    nr '-' nr optStep
|
    nr
;

numberSequence:
    numberSequence ',' numberUnit
|
    numberUnit
;

allSequence:
    '*'  optStep timeEnds   // empty set indicates `all valid specifications
    {
        d_cron.setAll($2);
    }
;

numberSpec:
    allSequence                                     
|
    numberSequence timeEnds
;


//timeName:
//    ID
//;

timeUnit:
    nr '-' nr optStep
|
    nr
|
    ID
//    {
//        d_cron.addName();
//    }
;

timeSequence:
    timeSequence ',' timeUnit
|
    timeUnit
;


timeSpec:
    allSequence
|
    timeSequence timeEnds
;


